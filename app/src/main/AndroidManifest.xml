<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="aide.xd.com.buildaide">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络通信-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />  <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 获取MAC地址-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 允许程序录制音频 -->
    <application
        android:name="base.PgyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="aide.xd.com.buildaide.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="aide.xd.com.buildaide.CompleteActivity" android:label="@string/step_3"/>
        <activity android:name="aide.xd.com.buildaide.SelectActivity" android:label="@string/step_2"/>
        <activity android:name="aide.xd.com.buildaide.AboutActivity" android:label="@string/about" />
        <activity android:name="com.pgyersdk.activity.FeedbackActivity"/>
        <meta-data
            android:name="PGYER_APPID"
            android:value="388398494b35e7d2d95b00646d51b16b">
        </meta-data>
    </application>
</manifest>